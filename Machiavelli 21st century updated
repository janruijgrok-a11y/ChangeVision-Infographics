    <script>
        const tooltipCallback = {
            plugins: {
                tooltip: {
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                                return label.join(' ');
                            }
                            return label;
                        }
                    }
                }
            }
        };

        const wrapLabel = (label, maxWidth = 16) => {
            if (label.length <= maxWidth) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = '';
            for (const word of words) {
                if ((currentLine + ' ' + word).trim().length > maxWidth) {
                    lines.push(currentLine.trim());
                    currentLine = word;
                } else {
                    currentLine = (currentLine + ' ' + word).trim();
                }
            }
            if (currentLine) lines.push(currentLine.trim());
            return lines;
        };

        const chartColors = {
            primary: '#FFA600',
            secondary: '#EF5675',
            tertiary: '#7A5195',
            quaternary: '#374C80',
            text: '#FFFFFF',
            grid: 'rgba(255, 255, 255, 0.2)'
        };
        
        Chart.defaults.color = chartColors.text;
        Chart.defaults.borderColor = chartColors.grid;

        new Chart(document.getElementById('marketCapChart'), {
            type: 'bar',
            data: {
                labels: ['Apple', 'Microsoft', 'Alphabet', 'Amazon', 'Meta', 'GDP: Germany', 'GDP: Japan', 'GDP: UK'].map(l => wrapLabel(l)),
                datasets: [{
                    label: 'Value in Trillions USD (2025 est.)',
                    data: [3.5, 3.4, 2.5, 2.1, 1.5, 4.5, 4.2, 3.3],
                    backgroundColor: [chartColors.primary, chartColors.primary, chartColors.primary, chartColors.primary, chartColors.primary, chartColors.secondary, chartColors.secondary, chartColors.secondary],
                    borderColor: 'rgba(0,0,0,0)',
                    borderWidth: 1
                }]
            },
            options: {
                ...tooltipCallback,
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        beginAtZero: true,
                        title: { display: true, text: 'Trillions USD' }
                    }
                },
                plugins: {
                    ...tooltipCallback.plugins,
                    legend: { display: false }
                }
            }
        });

        new Chart(document.getElementById('aiRaceChart'), {
            type: 'bar',
            data: {
                labels: ['2022', '2023', '2024', '2025 (est.)'],
                datasets: [{
                    label: 'USA AI Investment',
                    data: [55, 65, 75, 90],
                    backgroundColor: chartColors.primary,
                }, {
                    label: 'China AI Investment',
                    data: [40, 50, 68, 85],
                    backgroundColor: chartColors.secondary,
                }]
            },
            options: {
                ...tooltipCallback,
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Billions USD' }
                    }
                },
                 plugins: {
                    ...tooltipCallback.plugins,
                    legend: { position: 'top' }
                }
            }
        });

        new Chart(document.getElementById('inequalityChart'), {
            type: 'line',
            data: {
                labels: ['2010', '2015', '2020', '2025', '2030 (proj.)'],
                datasets: [{
                    label: 'Gini Coefficient (Inequality)',
                    data: [0.45, 0.47, 0.49, 0.52, 0.56],
                    fill: true,
                    backgroundColor: 'rgba(239, 86, 117, 0.3)',
                    borderColor: chartColors.secondary,
                    tension: 0.4
                }]
            },
            options: {
                 ...tooltipCallback,
                responsive: true,
                maintainAspectRatio: false,
                 plugins: {
                    ...tooltipCallback.plugins,
                    legend: { display: false }
                }
            }
        });

        new Chart(document.getElementById('blackBoxChart'), {
            type: 'doughnut',
            data: {
                labels: ['Opaque "Black Box" Decisions', 'Explainable Decisions'],
                datasets: [{
                    data: [65, 35],
                    backgroundColor: [chartColors.secondary, chartColors.quaternary],
                    borderColor: '#003F5C',
                    borderWidth: 4
                }]
            },
            options: {
                 ...tooltipCallback,
                responsive: true,
                maintainAspectRatio: false,
                cutout: '60%',
                 plugins: {
                    ...tooltipCallback.plugins,
                    legend: { position: 'bottom' }
                }
            }
        });
    </script>
