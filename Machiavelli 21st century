    <script>
        // Define new colors that contrast well with the #390840 background
        const chartColors = {
            primary: '#1DDFD6', // Bright Cyan/Teal
            secondary: '#FF7F9F', // Vibrant Pink
            tertiary: '#FFE472', // Light Yellow/Gold
            quaternary: '#A6F684', // Light Green
            white: '#FFFFFF',
            gray: '#D1D5DB'
        };

        // Shared function for customizing tooltips
        const tooltipCallback = {
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            let label = context.dataset.label || '';
                            if (label) {
                                label += ': ';
                            }
                            if (context.chart.canvas.id === 'marketCapChart') {
                                label += context.raw.toFixed(2) + ' T USD';
                            } else if (context.parsed !== undefined) {
                                // For the doughnut chart
                                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                const currentValue = context.raw;
                                const percentage = parseFloat((currentValue / total * 100).toFixed(1));
                                label = `${context.label}: ${currentValue} Decisions (${percentage}%)`;
                            }
                            return label;
                        }
                    },
                    backgroundColor: 'rgba(46, 6, 49, 0.9)', // Dark card color for tooltip background
                    titleColor: chartColors.white,
                    bodyColor: chartColors.gray,
                    borderColor: chartColors.primary,
                    borderWidth: 1,
                    cornerRadius: 6
                },
                legend: {
                    labels: {
                        color: chartColors.white,
                        font: { family: "'Inter', sans-serif" }
                    }
                }
            },
            scales: {
                x: {
                    ticks: { color: chartColors.gray },
                    grid: { color: 'rgba(255, 255, 255, 0.1)' },
                    title: { display: true, color: chartColors.white }
                },
                y: {
                    ticks: { color: chartColors.gray },
                    grid: { color: 'rgba(255, 255, 255, 0.1)' },
                    title: { display: true, color: chartColors.white }
                }
            }
        };


        // 1. Bar Chart: Market Cap vs. GDP (Mock Data in Trillions USD)
        new Chart(document.getElementById('marketCapChart'), {
            type: 'bar',
            data: {
                labels: ['Apple', 'Microsoft', 'Saudi Arabia', 'Amazon', 'Meta', 'Brazil', 'Google', 'Canada', 'Nvidia'],
                datasets: [
                    {
                        label: 'Market Cap / GDP (T USD)',
                        data: [3.15, 3.09, 1.10, 1.95, 1.25, 2.10, 2.20, 2.24, 2.15],
                        // Alternating colors for contrast between Tech and Nations
                        backgroundColor: (context) => {
                            const index = context.dataIndex;
                            // Tech companies (odd indices for example) get primary color, Nations get tertiary
                            const techIndices = [0, 1, 3, 4, 6, 8]; // Example based on labels
                            if (techIndices.includes(index)) {
                                return chartColors.primary; // Tech Company (Cyan)
                            } else {
                                return chartColors.tertiary; // Nation GDP (Yellow)
                            }
                        },
                        borderColor: '#ffffff',
                        borderWidth: 0,
                        borderRadius: 4,
                    }
                ]
            },
            options: {
                ...tooltipCallback,
                indexAxis: 'y', // Horizontal bars for better comparison
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    ...tooltipCallback.plugins,
                    legend: { display: false }
                },
                scales: {
                    x: {
                        ...tooltipCallback.scales.x,
                        title: { display: true, text: 'Value (Trillions USD)', color: chartColors.white }
                    },
                    y: {
                        ...tooltipCallback.scales.y,
                        // Set the y-axis title to be blank since the labels are descriptive
                        title: { display: false }
                    }
                }
            }
        });

        // 2. Doughnut Chart: Black Box Decisions
        new Chart(document.getElementById('blackBoxChart'), {
            type: 'doughnut',
            data: {
                labels: ['Opaque "Black Box" Decisions', 'Explainable Decisions'],
                datasets: [{
                    data: [65, 35],
                    // Adapted colors for the purple theme
                    backgroundColor: [chartColors.secondary, chartColors.quaternary],
                    borderColor: '#2e0631', // Use card background color for border contrast
                    borderWidth: 6
                }]
            },
            options: {
                ...tooltipCallback,
                responsive: true,
                maintainAspectRatio: false,
                cutout: '65%',
                 plugins: {
                    ...tooltipCallback.plugins,
                    legend: { position: 'bottom', labels: { color: chartColors.white } }
                }
            }
        });
    </script>
</body>
</html>
